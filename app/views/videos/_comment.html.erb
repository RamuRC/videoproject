<% @comments.each do |comment| %> 
    <h3> <%= comment.title %> </h3>
    <p> <%= comment.comment %> </p>
<% end %> 

<%= form_tag :action => 'comment' do  %>
	Title: <%= text_field 'comment', 'title' %>
	Comment: <%= text_field 'comment', 'comment' %>
	<%= submit_tag 'Add Comment' %>
	<%= hidden_field 'commentable', 'commentable_id', :value => @video.id %>
<% end  %>
