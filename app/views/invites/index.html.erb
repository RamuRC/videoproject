<h1>Listing invites</h1>

<h2>Need to add capability to invite users from this list.  Didn't decide 100% how to implement yet.</h2>

        <% @li_client.connections.map { |c| %> 
            <%= c.first_name  %> <%= c.last_name %> <%= c.headline %>  -- <%= c.id %>  <br />
        <% } %>          


<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Linkedin</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invites.each do |invite| %>
  <tr>
    <td><%= invite.first_name %></td>
    <td><%= invite.last_name %></td>
    <td><%= invite.linkedin_id %></td>
    <td><%= invite.title %></td>
    <td><%= link_to 'Show', invite %></td>
    <td><%= link_to 'Edit', edit_invite_path(invite) %></td>
    <td><%= link_to 'Destroy', invite, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

