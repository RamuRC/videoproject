<p id="notice"><%= notice %></p>

<h1>Invite Your Linkedin Connections to Gloopt</h1>

<% if current_user.invites_left > 0 %> 

	<h3><%= link_to "Invite Friends By Email", new_email_invite_path %> </h3> 

	<%= form_tag  :method => 'post', :action => 'create_invite_list' do %> 
		<%= submit_tag 'Create Invite Message' %> 
		<table class="table table-striped table-bordered table-condensed">
			<tr>	
				<th>Contact</th>
				<th>Send Invite?</th>
			</tr>
	  <% @li_client.connections.map { |c| %> 
	  	<tr> 
		    <td><%= link_to name_and_headline(c), '/invites/new/'+c.id  %>  </td>
		    <td><%= check_box_tag 'invites[]', c.id %> </td>
		  </tr>
	  <% } %>          
		</table>
		<%= submit_tag 'Create Invite Message' %> 
	 <% end %> 
<% else %> 
  <h2>You do not have any invites left.  We will email you when there are more available.  </h2>
<% end %> 

